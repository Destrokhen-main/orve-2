#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "[2Ô∏è‚É£ ] - check commit message"
message="$(cat $1)"
requiredPattern="^(feat|fix|edit|merge|mix): .*$"

if ! [[ $message =~ $requiredPattern ]];
then
  echo "üö® Wrong commit message!"
  echo "The commit message must have this format:"
  echo "Allowed verbs in imperative mood: feat, fix, edit, merge, mix"
  echo "Example: fix: bla bla bla"
  echo " "
  echo "Your commit message was:"
  echo $message
  exit 1
fi

echo "[2Ô∏è‚É£ ] check commit message - ‚úÖ DONE"