{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "newLine": "LF",
    "removeComments": false,
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "declaration": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}