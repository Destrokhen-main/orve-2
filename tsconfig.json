{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": false,
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "newLine": "LF",
    "removeComments": false,
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "rootDir": ".",
    "paths": {
      "@/src/*": [
        "./src/"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}